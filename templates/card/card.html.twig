    {% extends 'base.html.twig' %}

    {% block title %}Cardex - Carte{% endblock %}

    {% block body %}
        Vue d'une carte de Cardex <br/><br />

        Nom de la carte : {{ card.name }} <br/>
        <a href="{{ path('extension.show', {'extension': extension.id}) }}">
            Extension de la carte : {{ extension.code }} - {{ extension.name }}
        </a> <br />
        Numéro de la carte : {{ card.number }} <br /> <!--Faire en sorte que le format du numéro de carte soit adapté à l'extension automatiquement => 001/100 p.e-->
        Rareté de la carte : {{ card.rarity }} <br /> <!--Faire en sorte que la rareté apparaisse avec les icônes-->
        {{ quantity }}

    {% endblock %}