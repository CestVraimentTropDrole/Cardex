    {% extends 'base.html.twig' %}

    {% block title %}Cardex - Accueil{% endblock %}

    {% block body %}
        Index de Cardex <br /><br />

        Liste des extensions :
        <ul>
            {% for stat in stats %}
                <li><a href="{{ path('extension.show', {'extension': stat.id}) }}">
                    {{ stat.code }} - {{ stat.name }} : {{ stat.completion }}%
                </a></li> 
            {% endfor %}
        </ul>
    {% endblock %}